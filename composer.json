{
    "name": "amirbagh75/hesabfa-client",
    "type": "library",
    "description": "A simple PHP package for hesabfa API",
    "keywords": [
        "amirbagh75",
        "HesabfaClient"
    ],
    "homepage": "https://github.com/amirbagh75/hesabfa-php-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Amirhossein Baghaie",
            "email": "amirbagh75@gmail.com",
            "homepage": "https://amirbagh75.ir",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": "^6.5",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Amirbagh75\\HesabfaClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amirbagh75\\HesabfaClient\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Amirbagh75\\HesabfaClient\\HesabfaServiceProvider"
            ],
            "aliases": {
                "HesabfaClient": "Amirbagh75\\HesabfaClient\\Facades\\HesabfaClient"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
